{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, filtered by author or topic. You can sort by columns, and limit results using limits and select page using p",
    "queries": ["author", "topic", "sort_by", "order", "limit", "p"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 7,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "post an article ",
    "queries": [],
    "exampleResponse": {
      "article":{
        "author": "butter_bridge",
        "title": "test article",
        "body": "this article is about cats",
        "topic": "cats",
        "article_img_url": "https://placeholder.jpg",
        "article_id": 14,
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z"
    }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "gets a single article by its article_id",
    "queries": [],
    "exampleResponse": {
      "article":{
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": "11"
        }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes on an article by increment or decrement",
    "queries": [],
    "exampleResponse": {
      "article":[
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-05-21 23:19:00",
          "votes": 105,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "gets all comments for an article by the article_id",
    "queries": [],
    "exampleResponse": {
      "article":[
        {
          "comment_id": 5,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "icellusedkars",
          "body": "I hate streaming noses",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "post a comment related to a specific article",
    "queries": [],
    "exampleResponse": {
      "comment":{
        "article_id": 1,
        "author": "rogersop",
        "body": "I think it could have been worse",
        "comment_id": 19,
        "created_at": "2020-05-21 23:19:00",
        "votes": 0
      }
    }
  },
  "GET /api/users": {
    "description": "returns a list of all users",
    "queries": [],
    "exampleResponse": {
      "article":[
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "returns the user with the given username",
    "queries": [],
    "exampleResponse": {
      "article":{
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "amend a comment based on the comment id",
    "queries": [],
    "exampleResponse": {
      "article":[
        {
          "comment_id": 1,
          "body": "Oh, I've got compassion running out of my nose, pal! I'm the Sultan of Sentiment!",
          "author": "butter_bridge",
          "article_id": 9,
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 21
      }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "delete a comment based on its comment_id",
    "queries": [],
    "exampleResponse": {
      "article":[
        {
          "comment_id": 5,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "icellusedkars",
          "body": "I hate streaming noses",
          "article_id": 1
        }
      ]
    }
  }
}